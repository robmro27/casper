<li class="dropdown messages-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <i class="fa fa-envelope-o"></i>
      <span class="label label-success">{{events|length}}</span>
    </a>
    <ul class="dropdown-menu">
      <li class="header">You have {{events|length}} invitations</li>


      <li>
        <!-- inner menu: contains the actual data -->
        <ul class="menu">
          {% for event in events %}  
          <li>
            <a href="#">
              <h4>
                {{ event.eventName }}
                <small><i class="fa fa-mail-reply"></i></small>
              </h4>
            </a>
          </li>
          {% endfor %}
        </ul>
      </li>
      <li class="footer"><a href="{{ path('event_list_my_invitations') }}">See All Invitations</a></li>
    </ul>
</li>  