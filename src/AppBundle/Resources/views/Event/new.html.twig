{% extends "::base.html.twig" %}

{% block title %}New Event{% endblock %}

{% block body %}
    
<!-- Your Page Content Here -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Add Event
        <small>add</small>
      </h1>
      {#<ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>#}
    </section>    
    
<section class="content">

    {{ form_start(form,{'attr': {'novalidate' : 'novalidate'}}) }}
    <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <div class="box box-success">
                    <div class="box-header with-border">
                      <h3 class="box-title">Address</h3>
                    </div>
                    <div class="box-body">

                      <div class="form-group">
                        {{ form_label(form.event_name) }}
                        <div class="col-sm-10 input-append date">
                            <div class='input-group'>
                                <div class="input-group-addon"><i class="fa fa-pencil"></i></div>
                                {{ form_widget(form.event_name) }}
                            </div>
                            <span class="form-error">    
                            {{ form_errors(form.event_name) }}
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.event_description) }}
                        <div class="col-sm-10 input-append date">
                            <div class='input-group'>
                                <div class="input-group-addon">
                                    <i class="fa fa-pencil"></i>
                                </div>
                                {{ form_widget(form.event_description) }}
                            </div>
                            <span class="form-error">    
                            {{ form_errors(form.event_description) }}
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.event_start) }}
                        <div class="col-sm-10 input-append date">
                            <div class='input-group date' id="datetimepicker1">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                {{ form_widget(form.event_start) }}
                                <span class="add-on">
                                    <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                                    </i>
                                </span>
                            </div>
                            <span class="form-error">    
                            {{ form_errors(form.event_start) }}
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.event_duration) }}
                        <div class="col-sm-10 input-append date">
                            <div class='input-group'>
                                <div class="input-group-addon">
                                    <i class="fa fa-pencil"></i>
                                </div>
                                {{ form_widget(form.event_duration) }}
                            </div>
                            <span class="form-error">    
                            {{ form_errors(form.event_duration) }}
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.event_invitations_end) }}
                        <div class="col-sm-10 input-append date">
                            <div class='input-group date' id="datetimepicker2">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                {{ form_widget(form.event_invitations_end) }}
                                <span class="add-on">
                                    <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                                    </i>
                                </span>
                            </div>
                            <span class="form-error"> 
                                {{ form_errors(form.event_invitations_end) }}
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.event_max_users) }}
                        <div class="col-sm-10 input-append date">
                            <div class='input-group'>
                                <div class="input-group-addon">
                                    <i class="fa fa-pencil"></i>
                                </div>
                                {{ form_widget(form.event_max_users) }}
                            </div>
                            <span class="form-error"> 
                                {{ form_errors(form.event_max_users) }}
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.event_type) }}
                        <div class="col-sm-10 input-append date">
                            <div class='input-group'>
                                <div class="input-group-addon">
                                    <i class="fa fa-pencil"></i>
                                </div>
                                {{ form_widget(form.event_type) }}
                            </div>
                            <span class="form-error"> 
                                {{ form_errors(form.event_type) }}
                            </span>
                        </div>
                    </div>

                      <!-- /input-group -->
                    </div>

                    <!-- /.box-body -->

                  </div>
                  <!-- /.box -->
            </div>

            <!-- right column -->
            <div class="col-md-6">
              <!-- Horizontal Form -->
              <div class="box box-success">
                <div class="box-header with-border">
                  <h3 class="box-title">Event Location</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                  <div class="box-body">

                    <div class="form-group">
                        {{ form_label(form.event_location) }}
                        <div class="col-sm-8 input-append date">
                            {{ form_widget(form.event_location) }}
                            <span class="form-error"> 
                            {{ form_errors(form.event_location) }}
                            </span>
                        </div>
                        <a id="find" href="#" class="left btn btn-success">Find</a>
                    </div>


                    <div id="map-container" class="new-event-map-responsive">
                      <div id="map"></div>
                    </div>

                    {{ form_row(form.event_lat) }}
                    {{ form_row(form.event_lng) }}
                  </div>
                  <!-- /.box-body -->
                  <div class="box-footer">
                    <div class="box-footer">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                  </div>
              </div>
              <!-- /.box -->
            </div>
            <!--/.col (right) -->
    </div>
    {{ form_end(form) }}                
</section>
                
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
    <script src="{{ asset('googlemaps/googlemaps.js') }}"></script>
    <script type="text/javascript">
        $(function () {
            
           $('#datetimepicker1').datetimepicker({
               locale: 'en-gb'
           });
           $('#datetimepicker2').datetimepicker({
               locale: 'en-gb'
           });
       });
       
       $( document ).ready(function() {
            
            mapObj.initialize('map', 'event_event_lat', 'event_event_lng');
            mapObj.codeAddress('event_event_location','event_event_lat', 'event_event_lng');
            
            $('#find').on('click', function() {
                mapObj.initialize('map', 'event_event_lat', 'event_event_lng');
                mapObj.codeAddress('event_event_location','event_event_lat', 'event_event_lng');
            });
            
        });
       
    </script>
{% endblock %}